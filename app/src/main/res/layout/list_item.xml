<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="400dp"
        android:layout_height="67dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="7dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/reps"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="8dp"
            android:text="Reps:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_text"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/exercise_text"
            android:layout_width="381dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="exercise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/sets_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@+id/sets"
            app:layout_constraintStart_toEndOf="@+id/sets"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/reps_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@+id/reps"
            app:layout_constraintStart_toEndOf="@+id/reps"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/sets"
            android:layout_width="35dp"
            android:layout_height="21dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Sets:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_text"
            android:textColor="@color/colorAccent"/>

        <!-- <TextView
             android:id="@+id/timestamp_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="timestamp"
             style="@style/TextAppearance.AppCompat.Body1"/> -->


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
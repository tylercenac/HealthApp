<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateRoutineActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/reps"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="Reps:"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/edit_exercise"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/edit_exercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Enter an exercise"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/Sets"
        app:layout_constraintTop_toBottomOf="@+id/edit_exercise"
        android:textColor="@color/colorAccent"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/reps"
        app:layout_constraintTop_toBottomOf="@+id/edit_exercise" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/Sets"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Sets:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_exercise"
        android:textColor="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>